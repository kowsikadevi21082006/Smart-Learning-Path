# ========== REQUIRED SETTINGS ==========
# Get your Cerebras API key from: https://cloud.cerebras.ai/
CEREBRAS_API_KEY=your_cerebras_api_key_here

# MongoDB Atlas connection string
# Get this from your MongoDB Atlas dashboard
MONGODB_ATLAS_URI=your_mongodb_connection_string_here

# ========== OPTIONAL SETTINGS (with defaults) ==========
# MongoDB Configuration
MONGODB_DB_NAME=ai_db
MONGODB_COLLECTION_NAME=learning_paths
MONGODB_INDEX_NAME=vector_index

# Redis (Optional - only if you want caching)
REDIS_URL=redis://localhost:6379

# Application Settings
DEBUG=True
API_VERSION=v1

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Cerebras Model Settings
CEREBRAS_MODEL=llama-3.3-70b
MAX_TOKENS=4000
